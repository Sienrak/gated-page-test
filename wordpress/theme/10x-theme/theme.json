{
  "$schema": "https://schemas.wp.org/trunk/theme.json",
  "version": 3,
  "settings": {
    "appearanceTools": true,
    "color": {
      "palette": [
        { "slug": "tan-1",       "color": "hsl(14, 100%, 92%)",  "name": "Tan 1" },
        { "slug": "tan-2",       "color": "hsl(340, 62%, 91%)",  "name": "Tan 2" },
        { "slug": "tan-3",       "color": "hsl(2, 74%, 92%)",    "name": "Tan 3" },
        { "slug": "pink-1",      "color": "hsl(308, 72%, 79%)",  "name": "Pink 1" },
        { "slug": "pink-2",      "color": "hsl(303, 64%, 82%)",  "name": "Pink 2" },
        { "slug": "pink-3",      "color": "hsl(305, 69%, 81%)",  "name": "Pink 3" },
        { "slug": "lav-1",       "color": "hsl(271, 96%, 91%)",  "name": "Lavender 1" },
        { "slug": "lav-2",       "color": "hsl(290, 69%, 88%)",  "name": "Lavender 2" },
        { "slug": "lav-3",       "color": "hsl(296, 63%, 90%)",  "name": "Lavender 3" },
        { "slug": "secondary",   "color": "hsl(280, 20%, 12%)",  "name": "Dark Purple" },
        { "slug": "foreground",   "color": "hsl(0, 0%, 9%)",     "name": "Foreground" },
        { "slug": "muted-fg",    "color": "hsl(280, 12%, 29%)",  "name": "Muted Foreground" },
        { "slug": "white",       "color": "#ffffff",              "name": "White" },
        { "slug": "heading-dark","color": "#3c2a46",              "name": "Heading Dark" }
      ],
      "gradients": [
        {
          "slug": "primary",
          "gradient": "linear-gradient(135deg, hsl(303, 64%, 82%), hsl(271, 96%, 91%))",
          "name": "Primary (Pink to Lavender)"
        }
      ]
    },
    "typography": {
      "fontFamilies": [
        {
          "fontFamily": "\"Instrument Serif\", serif",
          "slug": "display",
          "name": "Display",
          "fontFace": [
            {
              "fontFamily": "Instrument Serif",
              "fontWeight": "400",
              "fontStyle": "normal",
              "src": ["https://fonts.googleapis.com/css2?family=Instrument+Serif:ital@0;1&display=swap"]
            }
          ]
        },
        {
          "fontFamily": "\"Manrope\", sans-serif",
          "slug": "body",
          "name": "Body",
          "fontFace": [
            {
              "fontFamily": "Manrope",
              "fontWeight": "400 700",
              "fontStyle": "normal",
              "src": ["https://fonts.googleapis.com/css2?family=Manrope:wght@400;500;600;700&display=swap"]
            }
          ]
        }
      ]
    },
    "spacing": {
      "units": ["px", "em", "rem", "vw"],
      "spacingSizes": [
        { "size": "8px",  "slug": "10", "name": "XS" },
        { "size": "16px", "slug": "20", "name": "S" },
        { "size": "22px", "slug": "30", "name": "M" },
        { "size": "40px", "slug": "40", "name": "L" },
        { "size": "64px", "slug": "50", "name": "XL" }
      ]
    },
    "layout": {
      "contentSize": "1400px",
      "wideSize": "1400px"
    },
    "border": {
      "radius": true,
      "color": true,
      "style": true,
      "width": true
    },
    "custom": {
      "radius": "1.5rem",
      "shadowPanel": "0 28px 70px rgba(30, 16, 42, 0.16)"
    }
  },
  "styles": {
    "color": {
      "background": "hsl(300, 30%, 92%)",
      "text": "hsl(0, 0%, 9%)"
    },
    "typography": {
      "fontFamily": "var(--wp--preset--font-family--body)",
      "fontSize": "16px",
      "lineHeight": "1.6"
    },
    "elements": {
      "heading": {
        "typography": {
          "fontFamily": "var(--wp--preset--font-family--display)"
        }
      },
      "h1": {
        "typography": {
          "fontSize": "clamp(28px, 4vw, 48px)",
          "lineHeight": "1.05"
        }
      },
      "h2": {
        "typography": {
          "fontSize": "clamp(24px, 3vw, 36px)",
          "lineHeight": "1.1"
        }
      },
      "link": {
        "color": {
          "text": "var(--wp--preset--color--secondary)"
        }
      }
    },
    "blocks": {
      "core/button": {
        "border": {
          "radius": "999px"
        },
        "typography": {
          "fontSize": "15px",
          "fontWeight": "600"
        },
        "spacing": {
          "padding": {
            "top": "14px",
            "bottom": "14px",
            "left": "22px",
            "right": "22px"
          }
        }
      }
    }
  },
  "templateParts": [
    { "name": "header", "title": "Header", "area": "header" }
  ],
  "customTemplates": [
    { "name": "landing-page", "title": "10X Landing Page", "postTypes": ["page"] }
  ]
}
